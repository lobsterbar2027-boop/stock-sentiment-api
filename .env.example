# Stock Sentiment API - Environment Variables
# Copy this file to .env and fill in your values

# Your Ethereum wallet address (receives USDC payments)
WALLET_ADDRESS=0x9B6C3EE1f3A155456C4da066D7398Fa75c4a127E

# Railway deployment URL (automatically set by Railway in production)
BASE_URL=https://stock-sentiment-api-production.up.railway.app

# Server port (Railway sets this automatically)
PORT=3000

# Optional: Reddit API credentials (for production scraping)
# REDDIT_CLIENT_ID=your_client_id_here
# REDDIT_CLIENT_SECRET=your_client_secret_here
# REDDIT_USER_AGENT=your_user_agent_here

# Optional: Twitter/X API credentials (for production scraping)
# TWITTER_BEARER_TOKEN=your_bearer_token_here

# Optional: x402 facilitator settings
# X402_FACILITATOR_URL=https://facilitator.x402.org

# Node environment
NODE_ENV=production
